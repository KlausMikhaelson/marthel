generator client {
  provider = "prisma-client-js"
}

model Game {
  id        String   @id @default(uuid())
  word      String
  guesses   String[]
  status    GameStatus
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  entryFee  Int
  User      User?    @relation(fields: [userId], references: [id])
  userId    String?

  @@index([userId])
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String
  balance   Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  games     Game[]

  @@index([email])
}

enum GameStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  CANCELED
}